---
import PageLayout from '@/layouts/BaseLayout.astro'
import ToolSection from '@/components/ToolSection.astro'
import Button from '@/components/Button.astro'

const DESIGN = [
	{
		name: 'Figma',
		description: 'Design Tool',
		href: 'https://www.figma.com/',
		iconPath: 'figma',
		iconBgColour: '#000001'
	},
	{
		name: 'Canva',
		description: 'Design Tool',
		href: 'https://www.canva.com/',
		iconPath: 'canva',
		iconBgColour: '#000001'
	}
]

const PRODUCTIVITY = [
	{
		name: 'Chrome',
		description: 'Browser',
		href: 'https://www.google.com/chrome/',
		iconPath: 'chrome',
		iconBgColour: '#414350'
	},
	{
		name: 'Notion',
		description: 'Note Taking',
		href: 'https://www.notion.so/product',
		iconPath: 'notion',
		iconBgColour: '#EFEFEE'
	},
	{
		name: 'Jira',
		description: 'Progress Tracker',
		href: 'https://www.atlassian.com/software/jira',
		iconPath: 'jira',
		iconBgColour: '#EFEFEE'
	}
]

const DEVELOPMENT = [
	{
		name: 'VS Code',
		description: 'IDE',
		href: 'https://code.visualstudio.com/',
		iconPath: 'vscode',
		iconBgColour: '#2C2C32'
	},
	{
		name: 'ChatGPT',
		description: 'AI',
		href: 'https://chat.openai.com/',
		iconPath: 'chatgpt',
		iconBgColour: '#06A67F'
	}
]

const DEVICE = [
	{
		name: 'Macbook Air M1',
		description: 'Daily Driver',
		href: 'https://www.apple.com/macbook-air/',
		iconPath: 'apple',
		iconBgColour: '#2C2C32'
	}
]
---

<PageLayout meta={{ title: 'Tools' }}>
	<div class='w-full'>
		<Button title='Back' href='/' style='button'>
			<svg
				xmlns='http://www.w3.org/2000/svg'
				width='14'
				height='14'
				viewBox='0 0 24 24'
				slot='icon-before'
			>
				<path
					fill='currentColor'
					d='m6.921 12.5l5.792 5.792L12 19l-7-7l7-7l.713.708L6.921 11.5H19v1z'
				>
				</path>
			</svg>
		</Button>

		<div class='mt-5 flex w-full flex-col gap-y-10'>
			<div>
				<h1 class='mb-1 text-2xl font-bold'>Tools</h1>
				<p>Tools and software I use daily</p>
			</div>

			<ToolSection title='Design' tools={DESIGN} />
			<ToolSection title='Productivity' tools={PRODUCTIVITY} />
			<ToolSection title='Development' tools={DEVELOPMENT} />
			<ToolSection title='Device' tools={DEVICE} />
		</div>
	</div>
</PageLayout>
